@model IEnumerable<EmployeeMiniApp.Models.Employee>

<h2>Employee List</h2>

<a asp-action="Create">Add New Employee</a>

<table border="1" cellpadding="5" cellspacing="0">
    <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Department</th>
        <th>Salary</th>
    </tr>
    @foreach (var emp in Model)
    {
        <tr>
            <td>@emp.Name</td>
            <td>@emp.Email</td>
            <td>@emp.Department</td>
            <td>@emp.Salary</td>
        </tr>
    }
</table>
